extends ../shared/template

block content

  .container__edit-date

    header.header
      include ../shared/nav

    section.new-date__top
      h3#editDate(data-id='#{meeting._id}') Edit Date Proposal
      //- p.new-date__tagline for #{user.name}

    section.new-date--form-box
    .when
      h3#dateTime(data-day='#{meeting.day}') When:

    .where
      h3(data-lat='#{meeting.location.lat}', data-lng='#{meeting.location.lng}') Where:
      h4= meeting.location.name
      p
        img(src='#{meeting.location.ratingImg}')
      p= meeting.location.address1
      p #{meeting.location.city}, #{meeting.location.state} #{meeting.location.zip}
      p= meeting.location.phone
      button(data-lat='#{meeting.location.lat}', data-lng='#{meeting.location.lng}')#directions Get Directions

    .inputs-wrapper
      #controls.controls
        h1 Map It
        input.form-control#cityOrZip(type='text', autofocus=true, placeholder='Zip Code or City, State')
        input.form-control#companyName(type='text', placeholder='Italian, Theaters, Burgers, Beer, etc.')
        button#search Search

      #dateAndTime.date-and-time
        input.form-control#date(type='date', value='#{day}')
        input.form-control#time(type='time')
        textarea.form-control#availability(type='textarea', placeholder='Your message here...')

    #searchListing.search-listing

    #map.map


block scripts
  script(src='/js/es6/compiled/date-edit.js')

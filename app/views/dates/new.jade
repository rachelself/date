extends ../shared/template

block content

  .container__new-date

    header.header
      include ../shared/nav

    section.top-section
      h3 New Date Proposal
      p.tagline for #{user.firstName}

    section.form-box
      h4 When are you available?
      .form-box__inner

        #dateAndTime.date-and-time
          textarea.form-control#availability(type='textarea', placeholder='So does next week work better for you?')
          input.form-control#date(type='date' placeholder='07/11/2015')
          input.form-control#time(type='time' placeholder='8:00pm')

        #controls.controls
          input.form-control#cityOrZip(type='text', autofocus=true, placeholder='Zip Code or City, State')
          input.form-control#companyName(type='text', placeholder='Italian, Theaters, Burgers, Beer, etc.')
          button#search Find

    #searchListing.search-listing

    .map-box
      h1 Map It
      #map.map

    #streetMap.street-map

    //- .summary-box
    //-   h3 Summary:
    //-   // p with #{XXX.name} @ #{XXX.location}, #{XXX.time}.
    //-   p your date with BillyJoe @ Starbuck's at 12am.

    .button-box
      button.btn Send
      button.btn Cancel


block scripts
  script(src='/js/es6/compiled/map.js')

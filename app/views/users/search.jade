extends ../shared/template

block content

  .container__search

    header.header
      include ../shared/nav

    .darth-vader
      p.big-text Find your match.

    //- section
    //-   select Select
    //-     option Option
    //-
    //-   button Go

    each user in users
      .person
        .image-box
          if(user.photos.length)
            each photo,i in user.photos
              if(photo.isPrimary)
                img(src=photo.path)
                .blurb= user.blurb
          else
            img(src='/img/#{user.gender}.png')
        .bio-box
          p.bio-text= user.bio
          .name= user.firstName
        a(href='/users/#{user._id}')
          button View
